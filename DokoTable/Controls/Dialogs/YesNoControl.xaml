<UserControl x:Class="DokoTable.Controls.Dialogs.YesNoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DokoTable.Controls.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="{Binding Title, ElementName=ThisControl}" Height="20" VerticalAlignment="Top" Margin="10,10,10,0"/>
        
        <!-- Yes -->
        <Button Content="Yes" Height="25" Width="80" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="YesButton_Click"/>
        
        <!-- No -->
        <Button Content="No" Height="25" Width="80" Margin="10,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="NoButton_Click"/>
    </Grid>
</UserControl>
