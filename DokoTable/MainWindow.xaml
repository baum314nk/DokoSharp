<Window x:Class="DokoTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:Xceed.Wpf.Toolkit;assembly=DotNetProjects.Wpf.Extended.Toolkit"
        xmlns:vw="clr-namespace:DokoTable.ViewModels" 
        xmlns:controls="clr-namespace:DokoTable.Controls"
        xmlns:wds="clr-namespace:DokoTable.ViewModels.WindowDialogService"
        xmlns:dialogs="clr-namespace:DokoTable.Controls.Dialogs"
        mc:Ignorable="d"
        Title="DokoTable" Height="900" Width="1600" Loaded="Window_Loaded" Closed="Window_Closed">
    <Window.Resources>
        <wds:WpfWindowDialogService x:Key="dialogService"
                                         ChoiceControlType="{x:Type dialogs:ChoiceControl}"
                                         YesNoControlType="{x:Type dialogs:YesNoControl}"/>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/Assets/green_table_texture.jpg" TileMode="FlipXY" ViewportUnits="Absolute" Viewport="0,0,467,612"/>
    </Window.Background>
    <Window.DataContext>
        <vw:DokoViewModel DialogService="{StaticResource dialogService}"/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*" MinWidth="300px"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="200"/>
        </Grid.RowDefinitions>
        <!-- Log -->
        <RichTextBox x:Name="txtLog" Grid.Column="2" 
                     Background="#FF363636" 
                     Foreground="#FFD9D9D9"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="monospace" Margin="10,10,10,10"/>

        <GridSplitter Width="1" Grid.Column="1" Grid.RowSpan="3" 
                      HorizontalAlignment="Center"
                      Background="LightGray" />

        <GridSplitter Height="1" Grid.Row="1" Grid.ColumnSpan="3" 
                      HorizontalAlignment="Stretch"
                      Background="LightGray" />

        <Label Content="{Binding InformationText}" VerticalAlignment="Bottom" FontSize="18" Margin="0,0,0,16"/>

        <!-- Placed Cards -->
        <controls:HandCardsControl Cards="{Binding PlacedCards}"  CardImages="{Binding CardImages}" Height="220" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800"/>
        
        <!-- Hand Cards -->
        <controls:HandCardsControl Cards="{Binding HandCards}" CardImages="{Binding CardImages}" Height="220" SelectableCards="{Binding PlaceableHandCards}"  SelectedCard="{Binding SelectedHandCard, Mode=TwoWay}"
                                   Grid.Row="2"/>

        <!-- Command Area -->
        <Button Content="Connect" Command="{Binding ConnectCommand}"
                Grid.Column="2" Grid.Row="2" 
                HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                Width="80" Height="25" Margin="10,0,0,10"/>
        <Label Content="Hostname:" 
               Grid.Column="2" Grid.Row="2" VerticalAlignment="Bottom" Height="25" Margin="0,0,199,10" HorizontalAlignment="Right"/>
        <TextBox Text="{Binding ServerHostname}" VerticalContentAlignment="Center"
                Grid.Column="2" Grid.Row="2" VerticalAlignment="Bottom" Height="25" Margin="0,0,114,10" HorizontalAlignment="Right" Width="80"/>
        <Label Content="Port:" 
               Grid.Column="2" Grid.Row="2" VerticalAlignment="Bottom" Height="25" Margin="0,0,75,10" HorizontalAlignment="Right"/>
        <TextBox Text="{Binding ServerPort}" VerticalContentAlignment="Center"
                Grid.Column="2" Grid.Row="2" VerticalAlignment="Bottom" Height="25" Margin="0,0,10,10" HorizontalAlignment="Right" Width="60"/>
        <!--<wpf:IntegerUpDown Value="{Binding RoundsToPlay}" 
                           Grid.Column="2" Grid.Row="2" 
                           HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                           Width="80" Height="25" Margin="0,0,15,10"/>
        <Label Content="Rounds to play:" 
               Grid.Row="2" Grid.Column="2" 
               VerticalAlignment="Bottom" HorizontalAlignment="Right" 
               Height="25" Width="95" Margin="0,0,100,10" />-->
    </Grid>
</Window>
